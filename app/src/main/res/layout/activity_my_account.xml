<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccountActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/salad"
        android:scaleType="centerCrop"
        android:id="@+id/saladImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow"
        android:scaleType="centerCrop"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/arrowImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Account"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrowImage"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saladImage">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/black_circle"
        android:scaleType="centerCrop"
        android:id="@+id/blackCircle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R"
            app:layout_constraintStart_toStartOf="@+id/blackCircle"
            app:layout_constraintTop_toTopOf="@+id/blackCircle"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginStart="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reeta Thakur"
                app:layout_constraintStart_toEndOf="@+id/blackCircle"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#C1C1C1"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/viewSubscription"
                app:layout_constraintTop_toBottomOf="@+id/blackCircle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Subscribe now to unlock the full Yummly\nexperience! Get robust personalization tools\nand detailed nutrition info, create custom\nmeal plans, level up your cooking skills, and\more."
                app:layout_constraintStart_toStartOf="@+id/viewSubscription"
                app:layout_constraintTop_toTopOf="@+id/viewSubscription"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill Level in the Kitchen"
                android:id="@+id/skillLevel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewSubscription"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#C1C1C1"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/viewNotification"
                app:layout_constraintTop_toBottomOf="@+id/skillLevel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:id="@+id/notification"
                android:layout_marginTop="10dp"
                android:text="Receive Yummly Notifications"
                app:layout_constraintStart_toStartOf="@+id/viewNotification"
                app:layout_constraintTop_toTopOf="@+id/viewNotification"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:id="@+id/control"
                android:layout_marginTop="10dp"
                android:text="Show Voice Control"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewNotification"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#C1C1C1"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/viewRecipesImage"
                app:layout_constraintTop_toBottomOf="@+id/control"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Only show Recipes with Images"
                app:layout_constraintStart_toStartOf="@+id/viewRecipesImage"
                app:layout_constraintTop_toTopOf="@+id/viewRecipesImage"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:id="@+id/autoplay"
                android:layout_marginTop="10dp"
                android:text="Autoplay videos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewRecipesImage"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#C1C1C1"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/viewPreference"
                app:layout_constraintTop_toBottomOf="@+id/autoplay"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Manage Email Preferences"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/viewPreference"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#218282"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Deleting Account"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewPreference"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>